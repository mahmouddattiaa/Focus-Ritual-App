{
    "name": "focus-ritual-monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "Root of the Focus Ritual Monorepo",
    "workspaces": [
        "backend",
        "Focuss"
    ],
    "scripts": {
        "start:backend": "npm run dev --workspace=backend",
        "start:frontend": "npm run dev --workspace=focus-ritual",
        "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces"
    },
    "devDependencies": {
        "concurrently": "^8.2.0"
    }
}