{
    "name": "focus-ritual-monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "Root of the Focus Ritual Monorepo",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "start:backend": "npm run dev --workspace=apps/backend",
        "start:web": "npm run dev --workspace=apps/web",
        "dev": "concurrently \"npm run start:backend\" \"npm run start:web\"",
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces"
    },
    "devDependencies": {
        "concurrently": "^8.2.0"
    }
}